	<div>
		<c:if test="${startPageNum > 1 }">
			<span>이전</span>
		</c:if>
		<c:forEach begin="${startPageNum }" end="${endPageNum }" step="1" var="page">
			<c:choose>
				<c:when test="${page == currentPage }">
					<span><b>${page }</b></span>
				</c:when>
				<c:otherwise>
					<span><a href="<%=request.getContextPath() %>/?pg=${page}">${page }</a></span>
				</c:otherwise>
			</c:choose>
		</c:forEach>
		<c:if test="${endPageNum < pageCnt }">
			<span>이전</span>
		</c:if>
