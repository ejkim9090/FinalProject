	<script>
	$("#passwd").on("input", invalidChkPasswd);
	
	function invalidChkPasswd {
		let pass = $("#passwd").val();
		
		if(pass.length < 5) {
			$("#invaildChk").html("패스워드가 5글자 이하입니다. 5글자 이상으로 작성해 주세요.");
			$("#invaildChk").css("color", "red");
		} else {
			$("#invaildChk").html("패스워드가 5글자 이상입니다.");
			$("#invaildChk").css("color", "green");
		}
	}
	</script>
